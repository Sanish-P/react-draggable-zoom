{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src": ["src/"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "externals": {
    "react": "React",
    "react-dom": "ReactDOM"
  }
}